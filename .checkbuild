{
  "checkbuild": {
    "enable": ["jshint", "jscs", "jsinspect", "nsp", "david"],
    "continueOnError": true,
    "allowFailures": false
  },

  "david": {
    "warn": {
      "E404": true
    }
  },

  "jshint": {
    "args": ["src/**/*.js"]
  },

  "jscs": {
    "args": ["lib/**.js"]
  },

  "jsinspect": {
    "args": ["*.js"],
    "diff": true
  },

  "buddyjs": {
    "args": ["*.js"],
    "ignore": [0, 1, 200]
  },

  "nsp": {}
}