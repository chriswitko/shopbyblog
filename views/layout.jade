    //- if (showSearchBox)
      form(action='/search', method='get')
        .container-wide.mb0.mt20
          .container
            .row
              .col-sm-push-2.col-sm-8
                .input-group
                  input.form-control.lato100(autocomplete='off', type='search', placeholder='Wpisz nazwę produktu lub nazwę bloga...', name='q', value='#{q||""}', style='border:1px solid #999999')
                  span.input-group-btn
                    button.btn.btn-primary.btn-icon(type='submit', style='border:1px solid #999999;')
                      i.fa.fa-search

    if (messages.errors||messages.info||messages.success)
      .container.mb0
        include partials/flash

    if !user&&!hideSubscriptionBox
        include subscribe

    .clearfix
      block content

    if !hideFooter
      include partials/footer

    != js('application')

    if currentLang=='pl'
        script(src='/js/lib/locale/pl.js')

    block js
